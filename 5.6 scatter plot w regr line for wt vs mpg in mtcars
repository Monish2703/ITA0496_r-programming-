library(ggplot2)
ggplot(mtcars, aes(x = wt, y = mpg)) +
  geom_point(color = "blue", size = 3) +
  geom_smooth(method = "lm", color = "red", se = FALSE) +
  labs(title = "Scatter Plot of wt vs mpg with Regression Line",
       x = "Weight (1000 lbs)",
       y = "Miles per Gallon") +
  theme_minimal()
